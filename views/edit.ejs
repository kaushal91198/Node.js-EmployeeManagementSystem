<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

<body>
   
    <%-include('header')%>

   
    <form action="/users/update/<%=records._id %>" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="exampleInputEmail1">Name</label>
      <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
        placeholder="Enter the employee name" name="name" required value="<%=records.name%>">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Email</label>
      <input type="email" class="form-control" id="exampleInputPassword1" name="email" placeholder="Enter the email"
        required value="<%=records.email%>">
    </div>
    <div class="form-group">
      <label for="inputState">Emp Type</label>
      <select id="inputState" class="form-control" name="etype">
        <option name="Hourly" selected>Hourly</option>
        <option name="Fixed">Fixed</option>
      </select>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Hourly Rate</label>
      <input type="text" class="form-control" id="exampleInputPassword1" name="hourlyrate" pattern="[0-9]{1,2}"
        placeholder="Enter the salary of employee by hour" required value="<%=records.hourlyrate%>">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Total Hour</label>
      <input type="text" class="form-control" id="exampleInputPassword1" name="totalhour" pattern="[0-9]{1,2}"
        placeholder="Enter the employee's workable hour" required value="<%=records.totalhour%>">
      <label for="exampleInputPassword1">Upload file</label>
      <input type="file" class="form-control" id="exampleInputPassword1" name="file">
      <img src="/uploads/<%=records.image%>" alt="" srcset="" style="width: 50px; height: 50px;">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</body>

</html>